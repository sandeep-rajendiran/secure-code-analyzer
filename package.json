{
  "name": "secure-code-analyzer",
  "version": "1.0.0",
  "description": "Enterprise DevSecOps Integration - CI/CD security pipeline with static/dynamic analysis and automated remediation",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "security:audit": "npm audit",
    "security:check": "node src/scanners/security-scanner.js",
    "sonar": "sonar-scanner",
    "docker:build": "docker build -t secure-code-analyzer .",
    "docker:run": "docker run -p 3000:3000 secure-code-analyzer",
    "k8s:deploy": "kubectl apply -f k8s/manifests/",
    "pipeline:test": "node pipeline/test-pipeline.js"
  },
  "keywords": [
    "devsecops",
    "security",
    "ci-cd",
    "static-analysis",
    "dynamic-analysis",
    "jenkins",
    "sonarqube",
    "kubernetes",
    "automated-remediation"
  ],
  "author": "DevSecOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "semver": "^7.5.4",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "dotenv": "^16.3.1",
    "pdfkit": "^0.13.0",
    "js-yaml": "^4.1.0",
    "@kubernetes/client-node": "^0.20.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "snyk": "^1.1248.0",
    "retire": "^4.2.3",
    "eslint-plugin-sonarjs": "^0.23.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run security:check",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}